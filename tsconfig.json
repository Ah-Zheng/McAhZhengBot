{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": [
      "ES6"
    ],
    "outDir": "./dist",
    // "declaration": false,
    // "declarationMap": false,
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist/**"
  ]
}